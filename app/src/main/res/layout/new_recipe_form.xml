<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="400dp"
            android:padding="16dp"
            android:orientation="vertical"
            tools:context=".NewRecipeForm">

        <TextView
                android:id="@+id/tvNewRecipeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:fontFamily="cursive"
                tools:text="Name of new Recipe"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvIngredients"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tvNewRecipeName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/linearLayoutIngredientTextForms"/>

        <LinearLayout
                android:id="@+id/linearLayoutIngredientTextForms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@id/linearLayoutIngredientSpinners"
                app:layout_constraintStart_toStartOf="parent"
                tools:context=".NewRecipeForm">

            <EditText
                    android:id="@+id/etIngrName"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:hint="Ingredient"
                    android:inputType="textCapSentences"
                    tools:text="Ingredient"/>

            <EditText
                    android:id="@+id/etQuantity"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Qty"
                    android:inputType="number"
                    tools:text="Qty"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/linearLayoutIngredientSpinners"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                app:layout_constraintBottom_toTopOf="@id/btnAddIngredient">

            <Spinner
                    android:id="@+id/spinMeasurement"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" android:spinnerMode="dropdown"
                    android:dropDownWidth="wrap_content"/>

            <Spinner
                    android:id="@+id/spinCategory"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:dropDownWidth="wrap_content"
                    android:layout_height="wrap_content" android:spinnerMode="dropdown"/>

        </LinearLayout>

        <Button
                android:id="@+id/btnAddIngredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Ingredient"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>